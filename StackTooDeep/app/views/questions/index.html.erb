<%= link_to "Sign Up", new_user_path %>

<%= form_for @question do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title %><br />

  <%= f.label :body %>:
  <%= f.text_field :body %><br />

  <%= f.submit %>
<% end %>

<aside class="questions-sidebar">
	<% @questions.each do |question| %>
  <p><%= link_to question.title, show_question_path(question) %> <%= link_to 'Edit', edit_question_path(question) %> <%= link_to 'Destroy',  { action: :destroy, id: question.id }, method: :delete, data: { confirm: 'Are you sure?' } %></p>
<% end %>
</aside>