<%= link_to "Sign Up", new_user_path %>
<%= link_to "Log In", new_session_path(session) %>
<%= link_to "Log Out", delete_session_path(session) %>

<% unless session[:user_id].nil? %>

  <%= form_for @question do |f| %>
    <%= f.label :title %>:
    <%= f.text_field :title %><br />

    <%= f.label :body %>:
    <%= f.text_area(:body, size: "50x10") %><br />

    <%= f.submit %>
  <% end %>

<% end %>

<aside class="questions-sidebar">
	<% @questions.each do |question| %>
  <p><%= link_to question.title, show_question_path(question) %> </p>
<% end %>
</aside>
